<!-- Validation failure messages -->
<% if @issue.errors.any? %>
  <% @issue.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Issue #<%= @issue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_issue/<%= @issue.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for issue_summary -->
      <div class="form-group">
        <label for="issue_summary" class="control-label">
          Issue summary
        </label>

        <input type="text" id="issue_summary" name="issue_summary" placeholder="Issue summary" class="form-control" value="<%= @issue.issue_summary %>">
      </div>

      <!-- Label and input for min_age -->
      <div class="form-group">
        <label for="min_age" class="control-label">
          Min age
        </label>

        <input type="text" id="min_age" name="min_age" placeholder="Min age" class="form-control" value="<%= @issue.min_age %>">
      </div>

      <!-- Label and input for max_age -->
      <div class="form-group">
        <label for="max_age" class="control-label">
          Max age
        </label>

        <input type="text" id="max_age" name="max_age" placeholder="Max age" class="form-control" value="<%= @issue.max_age %>">
      </div>

      <button class="btn btn-warning">
        Update Issue
      </button>
      or
      <a href="/issues/<%= @issue.id %>">Cancel</a>
    </form>
  </div>
</div>
